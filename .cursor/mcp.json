{
  "mcpServers": {
    "devvit-mcp": {
      "command": "npx",
      "args": ["-y", "@devvit/mcp"]
    },
    "player_one": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--user-data-dir",
        ".devvit-testing/profiles/p1",
        "--output-dir",
        ".devvit-testing/screenshots/p1"
      ],
      "cwd": ".devvit-testing/screenshots/p1"
    },
    "player_two": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--user-data-dir",
        ".devvit-testing/profiles/p2",
        "--output-dir",
        ".devvit-testing/screenshots/p2"
      ],
      "cwd": ".devvit-testing/screenshots/p2"
    }
  }
}
